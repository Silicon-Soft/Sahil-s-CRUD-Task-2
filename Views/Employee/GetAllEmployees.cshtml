﻿@using Task2.ViewModel
@model List<Task2.ViewModel.EmployeeViewModel>

@{
    ViewData["Title"] = "Index";
}

@if (TempData["ResultOk"] != null)
{
    <h1 class="alert-success">@TempData["ResultOk"]</h1>
}

<div class="container shadow p-5">

    <h1 class="text-center mb-3">Employee List</h1>

    <div class="col mb-3">
        <a asp-controller="Employee" asp-action="CreateEmployee" class="btn btn-lg btn-primary"><i class="bi bi-file-plus-fill"></i>Add Employee</a>
    </div>
    <table class="table table-bordered table-hover">
        <thead>
        <tr>
            <th scope="col">Name</th>
            <th scope="col">Gender</th>
            <th scope="col">Address</th>
            <th scope="col">Phone</th>
            <th scope="col">Email</th>
            <th scope="col">Salary</th>
            <th></th>
        </tr>
        </thead>
        <tbody>

        @foreach (var item in Model)
        {
            <tr>
                <td width="20%">
                    @item.Name
                </td>
                <td width="20%">
                    @item.Gender
                </td>
                <td width="25%">
                    @item.Address
                </td>
                <td width="20%">
                    @item.Phone
                </td>
                <td width="20%">
                    @item.Email
                </td>
                <td width="20%">
                    @item.Salary
                </td>
                <td>
                    <div role="group" class="w-60 btn-group">
                        <a asp-controller="Employee" asp-action="EditEmployee" asp-route-id="@item.Id" class=" btn btn-sm btn-primary"><i class="bi bi-pencil-square"></i>Edit</a>&nbsp;
                        <a asp-controller="Employee" asp-action="DeleteEmployee" asp-route-id="@item.Id" class="btn btn-sm btn-danger"><i class="bi bi-trash-fill"></i>Delete</a>
                    </div>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>