@using Task2.ViewModel
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model Task2.ViewModel.EmployeeViewModel
<div class="container shadow p-5">
    <div class="row pb-2">
        <h2>View Employee Details</h2>
    </div>

    <form method="get" asp-action="ReadEmployee">
        <input asp-for="Id" hidden />
        <div asp-validation-summary="All"></div>

        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="Name">Name</label>
                <input type="text" class="form-control mb-3" asp-for="Name" disabled>
                <span asp-validation-for="Name" class=" alert-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="Gender">Gender</label>
                <input type="text" class="form-control mb-3" asp-for="Gender" disabled>
                <span asp-validation-for="Gender" class=" alert-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="Gender">Address</label>
                <input type="text" class="form-control mb-3" asp-for="Address" disabled>
                <span asp-validation-for="Address" class=" alert-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="Phone">Phone</label>
                <input type="text" class="form-control mb-3" asp-for="Phone" disabled>
                <span asp-validation-for="Phone" class=" alert-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="Email">Email</label>
                <input type="text" class="form-control mb-3" asp-for="Email" disabled>
                <span asp-validation-for="Email" class=" alert-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="Salary">Salary</label>
                <input type="text" class="form-control mb-3" asp-for="Salary" disabled>
                <span asp-validation-for="Salary" class=" alert-danger"></span>
            </div>
        </div>


        <a asp-controller="Employee" asp-action="EditEmployee" asp-route-id="@Model.Id" class="btn btn-lg btn-primary p-2">Edit Details</a>&nbsp;
        <a asp-controller="Employee" asp-action="GetAllEmployees" class="btn btn-lg btn-warning p-2">Back To List</a>

    </form>

</div>


@*//for front end validations*@

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}